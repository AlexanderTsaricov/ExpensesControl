<MyRoot>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Настройки"
            font_size: 15
            size_hint: (1, 0.1)
            on_press: root.generate_number()
            background_color: .12, .29, .62, 1
            color: .96, .80, 1, 1
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "+"
                font_size: 40
                size_hint: (0.5, 0.1)
                background_color: .12, .29, .62, 1
                color: .96, .80, 1, 1

            Button:
                text: "-"
                font_size: 40
                size_hint: (0.5, 0.1)
                background_color: .12, .29, .62, 1
                color: .96, .80, 1, 1
                on_press: root.manager.current = 'addRoot'

        Button:
            text: "5000р"
            font_size: 15
            size_hint: (1, 0.1)
            on_press: root.generate_number()
            background_color: .12, .29, .62, 1
            color: .96, .80, 1, 1

<AddRoot>:
    auto_dismiss: False
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Настройки"
            font_size: 15
            size_hint: (1, 0.2)
            on_press: root.printer()
            background_color: .12, .29, .62, 1
            color: .96, .80, 1, 1
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: 'Money'
                color: [0, 84, 80, 19]
                font_size: 15
                size_hint: (0.2, 0.2)
            TextInput:
                id: inputMoney
                hint_text:'Enter money'
                font_size: 15
                size_hint: (0.8, 0.2)
                on_text: root.addMoney()
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: 'Category'
                color: [0, 84, 80, 19]
                font_size: 15
                size_hint: (0.2, 0.2)
            TextInput:
                id: inputCategory
                hint_text:'Enter category'
                font_size: 15
                size_hint: (0.8, 0.2)
                on_text: root.addCategory()
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: 'Comment'
                color: [0, 84, 80, 19]
                font_size: 15
                size_hint: (0.2, 0.2)
            TextInput:
                id: inputComment
                hint_text:'Enter comment'
                font_size: 15
                size_hint: (0.8, 0.2)
                on_text: root.addComment()
        Button:
            text: "ADD"
            font_size: 15
            size_hint: (1, 0.2)
            on_press: root.printer()
            background_color: .12, .29, .62, 1
            color: .96, .80, 1, 1